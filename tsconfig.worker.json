{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2022", "WebWorker"],
    "types": ["@cloudflare/workers-types/2025-10-01", "hono/jsx"],
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "bundler",
    "target": "ES2022",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src"],
  "exclude": [
    "tests/**",
    "**/*.spec.ts",
    "**/*.test.ts",
    "scripts/**",
    "tools/**"
  ]
}
