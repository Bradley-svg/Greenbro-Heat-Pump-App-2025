{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@pages/*": ["src/pages/*"],
      "@features/*": ["src/features/*"],
      "@components/*": ["src/components/*"],
      "@hooks/*": ["src/hooks/*"],
      "@api/*": ["src/api/*"],
      "@utils/*": ["src/utils/*"]
    },
    "types": ["vite/client", "react", "react-dom"],
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src", "vite.config.ts"],
  "exclude": [
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/__tests__/**",
    "tests/**",
    "e2e/**",
    "playwright.config.ts",
    "scripts/**",
    "tools/**"
  ]
}
